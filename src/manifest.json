{
  "name" : "Fontanello",
  "version" : "0.0.1",
  "description" : "Because you have a weak spot for fonts",
  "background" : { "scripts": ["background.js"] },
  "permissions" : [
    "contextMenus"
   ],
   "content_scripts": [
     {
       "matches": [
         "<all_urls>"
       ],
       "js": ["client.js"],
       "run_at": "document_start",
       "all_frames": true
     }
   ],
  "minimum_chrome_version" : "6.0.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
